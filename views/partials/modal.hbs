        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Editar Estudiante</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formularioEditarEstudiante">
                    <input type="text" hidden name="idEstudiante">
                    <input required type="text" name="nombre" placeholder="Nombre estudiante" class="form-control mb-2">
                    <input required type="text" name="curso" placeholder="Curso estudiante" class="form-control mb-2">
                    <input required type="number" name="nivel" placeholder="Nivel estudiante" class="form-control mb-2">
                    <button type="submit" class="btn btn-warning">Editar Estudiante</button>
                </form>
            </div>
